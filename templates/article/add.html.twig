                    {{ form_errors(formArticle.description) }}
                </div>
                <div class="form-group">
                    {{ form_label(formArticle.DateCreation) }}
                    {{ form_widget(formArticle.DateCreation) }}
                </div>
                <div class="form-group">
                    {# use pour les label#}
                    {{ form_label(formArticle.categorie,'Categorie') }}
                    {{ form_widget(formArticle.categorie) }}
                </div>
                <div>
                    <input type="submit" value="Enregistrer" class="btn btn-primary"/>
                </div>

            {{ form_end(formArticle) }}

        </div>
       {#{{form(formArticle)}} #}

