    <div class="example-wrapper">
        <h1>creation d'un nouvelle article via formulaire</h1>
        <div class="form container ">
            {{ form_start(formArticle) }}
            {# {{dump()}} #}
                <div class="form-group">
                    {# use pour les label#}
                    {{ form_label(formArticle.titre,'Titre de l\'article') }}
                    {# use pour le champ de type input #}
                    {{ form_widget(formArticle.titre,{'attr':{'class':'form-control'}}) }}
                    {{ form_errors(formArticle.titre) }}
