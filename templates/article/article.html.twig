{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}

    <div>
        <h1>Listing des articles</h1>
    <div class="tab container">
        <table class="table table-striped table-dark">
            <thead>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Liens vers descriptif articles</th>
                <th>Votes</th>
                <th>Categorie</th>
            </tr>
            </thead>
            <tbody>

            {% for key in list_article%}

                <tr>
                    <th>{{ key.titre }}</th>
                    {# recuperation de la valeur du click pour traitement pour la requete sql -> recup de l'annee selectionn√© dans val #}
                    <th> <a class=" list-group-item list-group-item-action" href="{{ path('app_description_article', { id: key.id }) }}">{{key.titre }}</a></th>
                    <th>{{ key.votes }}</th>
                    <th>{{ key.categorie.nom}}</th>
                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>
{% endblock %}